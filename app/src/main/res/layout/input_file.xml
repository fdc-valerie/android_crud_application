<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/b1"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="New Task"
        android:gravity="center"
        android:background="@color/color_theme_3"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:padding="10dp"
        android:textStyle="bold"
        android:fontFamily="@font/indigo_daisy"
        android:textSize="30sp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:paddingBottom="20dp">

        <EditText
            android:id="@+id/task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/input_custom_task_reg"
            android:hint="Task.."
            android:inputType="text"
            android:padding="10dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        >

        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/input_custom_task_reg"
            android:gravity="top"
            android:hint="Description.."
            android:inputType="text|textMultiLine"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="30dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/selectTime"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/color_theme_3"
            android:hint="SELECT TIME ALARM"
            android:drawableLeft="@drawable/ic_baseline_alarm_24"
            android:padding="10dp"
            android:textColorHint="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        >

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight=".5"
            android:background="@drawable/button_custom_cancel"
            android:fontFamily="sans-serif"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/saveBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight=".5"
            android:background="@drawable/button_custom_cancel"
            android:drawablePadding="15dp"
            android:fontFamily="sans-serif"
            android:padding="10dp"
            android:text="Ok"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>